{
  "name": "civitron-scraper-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Standalone scraper backend that runs on local PC and populates PostgreSQL database",
  "scripts": {
    "start": "tsx src/index.ts",
    "execute": "tsx src/execute-server.ts",
    "scrape": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 tsx src/scraper.ts",
    "schedule": "node src/scheduler.js",
    "test": "tsx src/test-connection.ts"
  },
  "dependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "puppeteer": "^24.34.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0"
  }
}
