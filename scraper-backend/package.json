{
  "name": "civitron-scraper-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Standalone scraper backend that runs on local PC and populates PostgreSQL database",
  "scripts": {
    "start": "tsx src/index.ts",
    "execute": "tsx src/execute-server.ts",
    "api": "tsx src/api-server.ts",
    "agent": "tsx src/langchain-server.ts",
    "scrape": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 tsx src/scraper.ts",
    "schedule": "node src/scheduler.js",
    "test": "tsx src/test-connection.ts"
  },
  "dependencies": {
    "@langchain/core": "^1.1.8",
    "@langchain/groq": "^1.0.2",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/ollama": "^1.1.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "langchain": "^1.2.3",
    "langsmith": "^0.4.4",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "puppeteer": "^24.34.0",
    "tsx": "^4.7.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "cross-env": "^10.1.0"
  }
}
