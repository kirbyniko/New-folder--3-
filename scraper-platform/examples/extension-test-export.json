{
  "name": "Honolulu local Calendar",
  "description": "Legislative calendar scraper for Honolulu",
  "jurisdiction": "Honolulu",
  "stateCode": "HI",
  "level": "local",
  "baseUrl": "https://www.honolulu.gov",
  "startUrl": "https://www.honolulu.gov/clerk/clk-council-calendar/",
  "requiresPuppeteer": false,
  "active": true,
  "metadata": {
    "notes": "Test scraper from Chrome extension",
    "createdWith": "Chrome Extension Scraper Builder"
  },
  "pageStructures": [
    {
      "pageType": "calendar",
      "pageName": "Calendar View",
      "hasPagination": true,
      "containerSelector": ".calendar-events",
      "itemSelector": ".event-item",
      "nextButtonSelector": ".next-month-btn",
      "prevButtonSelector": ".prev-month-btn",
      "fields": [
        {
          "fieldName": "name",
          "fieldType": "text",
          "fieldOrder": 1,
          "isRequired": true,
          "transformation": "trim",
          "comment": "name field",
          "selectorSteps": [
            {
              "stepOrder": 1,
              "actionType": "click",
              "selector": ".event-card",
              "waitAfter": 500,
              "comment": "Click event card to open modal"
            },
            {
              "stepOrder": 2,
              "actionType": "extract",
              "selector": ".modal-title h2",
              "comment": "Extract title from modal"
            }
          ]
        },
        {
          "fieldName": "date",
          "fieldType": "date",
          "fieldOrder": 2,
          "isRequired": true,
          "transformation": "parse_date",
          "comment": "date field",
          "selectorSteps": [
            {
              "stepOrder": 1,
              "actionType": "extract",
              "selector": ".event-date",
              "comment": "Extract date from event card"
            }
          ]
        },
        {
          "fieldName": "time",
          "fieldType": "text",
          "fieldOrder": 3,
          "isRequired": false,
          "comment": "time field",
          "selectorSteps": [
            {
              "stepOrder": 1,
              "actionType": "extract",
              "selector": ".event-time"
            }
          ]
        },
        {
          "fieldName": "url",
          "fieldType": "url",
          "fieldOrder": 4,
          "isRequired": false,
          "comment": "url field",
          "selectorSteps": [
            {
              "stepOrder": 1,
              "actionType": "extract",
              "selector": ".event-card a",
              "attributeName": "href",
              "comment": "Link to event details"
            }
          ]
        }
      ]
    },
    {
      "pageType": "detail",
      "pageName": "Event Detail Page",
      "fields": [
        {
          "fieldName": "description",
          "fieldType": "html",
          "fieldOrder": 1,
          "isRequired": false,
          "comment": "description from detail page",
          "selectorSteps": [
            {
              "stepOrder": 1,
              "actionType": "extract",
              "selector": ".event-description",
              "comment": "Full description"
            }
          ]
        }
      ]
    }
  ],
  "navigationSteps": [
    {
      "stepOrder": 1,
      "stepType": "click",
      "selector": ".next-month-btn",
      "comment": "Navigate to next month"
    }
  ]
}
